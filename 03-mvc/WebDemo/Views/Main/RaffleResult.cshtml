@{
    int LuckyNum = new Random().Next(1, 20);
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Hello!</title>
    </head>
    <body>
        <div>
            <p>
                <a href="/">Home</a> | 
                <a href="/lucky/@LuckyNum">Lucky Number</a> | 
                <a href="/trymyluck">Try my luck!</a> |
                <a href="/tryagain">Try Again</a> | 
                <a href="/raffle/entry">Enter the raffle!</a>
            </p>
        </div>
        <h1>Raffle Result</h1>
        <h3>Name: @ViewBag.FullName</h3>
        <h3>Horoscope: @ViewBag.Horoscope</h3>
        <p>Introuction: @ViewBag.Introduction</p>
        @if(ViewBag.Winning > 0.5)
        {
            <h1>You win!</h1>
        }
        else
        {
            <h1>You lose....</h1>
        }
    </body>
</html>

